#!/usr/bin/make -f

# Enable all hardening options
export DEB_BUILD_MAINT_OPTIONS = hardening=+all

# Set HOME for cargo (Launchpad builds need this)
export HOME = /tmp/build-home
export CARGO_HOME = $(HOME)/.cargo

%:
	dh $@

override_dh_auto_configure:
	# Create temporary home directory for cargo
	mkdir -p $(CARGO_HOME)
	# Install rustup and latest stable Rust to handle Cargo.lock v4
	# (Ubuntu 24.04 ships Rust 1.75 which cannot parse lockfile v4)
	# Security: Uses official Rust installer over HTTPS with TLS 1.2+ in isolated build environment
	curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y --default-toolchain stable --profile minimal
	# Verify rust toolchain is available
	. $(CARGO_HOME)/env && rustc --version && cargo --version

override_dh_auto_build:
	# Build the project with rustup-installed Rust
	. $(CARGO_HOME)/env && cargo build --release --locked

override_dh_auto_install:
	# Install the compiled binary
	install -D -m 0755 target/release/all-smi debian/all-smi/usr/bin/all-smi

override_dh_auto_test:
	# Skip tests to save build time on Launchpad
	@echo "Skipping tests for PPA build"

override_dh_auto_clean:
	# Don't run dh_auto_clean as it requires cargo to be installed
	# Just clean the build artifacts manually
	rm -rf target/ $(HOME)

override_dh_builddeb:
	dh_builddeb --destdir=../