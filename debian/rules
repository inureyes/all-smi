#!/usr/bin/make -f

# Enable all hardening options
export DEB_BUILD_MAINT_OPTIONS = hardening=+all

# Set HOME for cargo (Launchpad builds need this)
export HOME = /tmp/build-home
export CARGO_HOME = $(HOME)/.cargo

%:
	dh $@

override_dh_auto_configure:
	# Create temporary home directory for cargo
	mkdir -p $(CARGO_HOME)
	# Verify Rust 1.85 toolchain is available (from rust-1.85-all package)
	rustc-1.85 --version && cargo-1.85 --version

override_dh_auto_build:
	# Build the project with Ubuntu's Rust 1.85 (supports Cargo.lock v4)
	cargo-1.85 build --release --locked

override_dh_auto_install:
	# Install the compiled binary
	install -D -m 0755 target/release/all-smi debian/all-smi/usr/bin/all-smi

override_dh_auto_test:
	# Skip tests to save build time on Launchpad
	@echo "Skipping tests for PPA build"

override_dh_auto_clean:
	# Clean build artifacts
	rm -rf target/

override_dh_builddeb:
	dh_builddeb --destdir=../